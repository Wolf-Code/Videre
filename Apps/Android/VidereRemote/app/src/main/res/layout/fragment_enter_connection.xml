<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="3"
            tools:context="layout.EnterConnectionFragment">

	<TextView
		android:layout_width="wrap_content"
		android:layout_column="0"
		android:layout_row="0"
		android:text="@string/listenIP"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<EditText
		android:id="@+id/listenIPEntry"
		android:layout_column="1"
		android:layout_gravity="fill_horizontal"
		android:layout_row="0"
		android:ems="10"
		android:inputType="phone"
		android:maxLength="15"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_column="0"
		android:layout_row="1"
		android:text="@string/listenPort"
		android:textAppearance="?android:attr/textAppearanceLarge"
	    android:layout_gravity="center_vertical"
		/>

	<NumberPicker
		android:layout_width="wrap_content"
		android:id="@+id/listenPortEntry"
		android:layout_row="1"
		android:layout_column="1"
		android:gravity="fill_horizontal|center_horizontal"/>

</GridLayout>
