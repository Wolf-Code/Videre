<local:VidereWindow x:Class="Videre.Windows.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videre.Windows"
        xmlns:controls="clr-namespace:Videre.Controls"
        mc:Ignorable="d"
        Title="Media Library" Height="300" Width="300"
        GlowBrush="{DynamicResource AccentColorBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:LibraryDirectorySelector Grid.Row="0" x:Name="DirectorySelector"/>
        <controls:LibraryShowcaseControl Grid.Row="0" Grid.Column="1" x:Name="MediaShowcase"/>
    </Grid>
</local:VidereWindow>
